

<%= flash[:success] %>

<% if @book.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %> 'error' </li>
      <% end %>
    </ul>
  </div>
<% end %>







<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

     <% @books.each do |list| %>
    <tr>
    <td><%= list.title %></td>

    <td><%= list.body %></td>

     <td><%= link_to "Show", book_path(list.id)%></td>
     <td><%= link_to "Edit", edit_book_path(list.id)%></td>
     <td><%= link_to "Destroy", book_path(list.id), method: :delete %></td>

    </tr>
    <% end %>
  </table>


  
<%= form_with model: @book, local:true do |f| %>

  <h2>New book</h2>
  <h5>Title</h5>
  <%= f.text_field :title %>
 

  <h5>body</h5>
  <%= f.text_area :body %>
 

  <%= f.submit 'Create Book' %>

<% end %>